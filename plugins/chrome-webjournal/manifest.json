{
  "manifest_version": 2,
  "name": "indx webjournal",
  "version": "1.0",
  "description": "indx webjournal 0.1 by electronic Max et al",
  "browser_action": {
    "default_icon": {
      "19": "img/icon-pulse.gif",
      "38": "img/icon-pulse-128.gif"
    },
    "default_popup":"popup-indx.html",
    "default_title":"INDX"
  },
  "background": {
    "persistent":true,
    "page":"background.html"
  },
  "options_page": "options.html",
  "permissions": [
    "tabs",
    "browsingData",
    "clipboardRead",
    "clipboardWrite",
    "cookies",
    "history",
    "https://indx.local:8211/"
  ]
}