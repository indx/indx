<script>

$(document).ready(function(){


    var prefixes = "PREFIX rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> ";
    var queries = {
        "row_everything": prefixes+"CONSTRUCT {?item rdf:type ?type} WHERE {?item rdf:type ?type}",
        "row_uploaded_files": prefixes+"CONSTRUCT {?item rdf:type ?type . ?item <http://www.semanticdesktop.org/ontologies/nie/#mimeType> ?mimeType} WHERE {?item rdf:type <http://webbox.ecs.soton.ac.uk/ns#File> . ?item rdf:type ?type . OPTIONAL{?item <http://www.semanticdesktop.org/ontologies/nie/#mimeType> ?mimeType}}",
        "row_received_posts": prefixes+"CONSTRUCT {?item rdf:type ?type} WHERE {?item rdf:type <http://rdfs.org/sioc/ns#Post> . ?item rdf:type ?type}",
        "graphs": prefixes+"CONSTRUCT {?item rdf:type \"Named Graph\" } WHERE { GRAPH ?item { ?s ?p ?o }}",
    };


    $("#browser-row").find("a").click(function(evt){
        var target = $(evt.target);

        if (target.is(".active")){
            return false;
        }

        $("#browser-row").children().removeClass("active");
        target.parent().addClass("active");
        var target_id = target.parent().attr("id");

        $("#browser_table").html("");
        table_from_query(queries[target_id]);

        return false;
    });

    function browseTo(uri){
        alert(uri);
    }

    var table_from_query = function(query){

        $("#status").html("Loading items...");

        $.ajax(
            { "url": window.webbox_vars.server_url,
              "cache": false,
              "crossDomain": true,
              "data": {
                  "query": query,
              },
              "dataType": "json", // also sets the accept header
              "success": function(data, textStatus, jqXHR){

                  var newdata = wb_json_normalise(data);

                  var columns = [
                      {"uri": "uri", "label": "Item URI", "class": "browser_item", "click": function(uri){ browseTo(uri); }},
                      {"uri": "rdf:type", "label": "RDF Type"},
                  ];

                  $("#status").html("Rendering items...");
                  var dt = new DynamicTable($("#browser_table"), {"data": newdata, "columns": columns });
                  $("#status").html("");
              },
            }
        );
    }
    table_from_query(queries["row_uploaded_files"]);

});

</script>

